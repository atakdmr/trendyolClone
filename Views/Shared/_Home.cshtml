<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trendyol - En Trend Ürünler, En İyi Fiyatlar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome 6 -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link rel="stylesheet" href="~/css/home/home.css">
</head>

<body>
    <!-- Header -->
    <header>
        <!-- Navbar -->
        @await Html.PartialAsync("Partials/MainSite/_Navbar")

        <!-- Category Menu -->
        @await Component.InvokeAsync("CategoryNavbar")
    </header>
    <main class="py-4">
        <div class="container">

            <section class="mb-3">
                @RenderBody()
            </section>
            <!-- Trending Collections 2 -->
            @await Html.PartialAsync("Partials/MainSite/_TrendingCollections2")

            <!-- Trending Mobile App Link-->
            @await Html.PartialAsync("Partials/MainSite/_MobileAppLink")

            <!-- Footer -->
            @await Html.PartialAsync("Partials/MainSite/_Footer")
            @* ViewComponent'e Ekle Footer *@
        </div>
    </main>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>